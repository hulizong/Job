
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/js/jquery-2.2.4.min.js"></script>
    <title>Index</title>
</head>
<body>
    <div>
        <div>
            <span>手机号:</span><input type="text" id="Phone" placeholder="请输入手机号" />
        </div>
        <div>
            <span>密   码:</span><input type="password" id="Password" />
        </div>
        <div>
            <input type="button" value="登录" id="login" onclick="OnLogin()" />
        </div>
    </div>
    <script src="~/js/jquery-2.2.4.min.js"></script>
    <script>

        function OnLogin() {
            Password = $(" input[ id='Password' ] ").val();
            Phone = $(" input[ id='Phone' ] ").val();
            $.post("/Login/Login", { Phone: Phone, Password: Password }, function (data) {
                if (data.result.code == 1) {
                    alert(data.result.msg);
                    location.href="/Login/See";
                }
                else {
                    alert(data.result.msg);
                }
            });
        }
    </script>
</body>

</html>
